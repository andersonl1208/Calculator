{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": [ "warn", "always" ],
        "space-before-function-paren": "off",
        "indent": ["error", 4],
        "brace-style": [ "warn", "stroustrup", { "allowSingleLine": true } ],
        "max-len": ["error", { "code": 120 }]
    }
}